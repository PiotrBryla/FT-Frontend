doctype html
html(lang="en")
    head
        meta( charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link( rel="stylesheet" type="text/css" href="https://www.ft.com/__origami/service/build/v2/bundles/css?modules=o-grid@^4.3.8,o-fonts@^3.0.4,o-header@^7.2.9,o-buttons@^5.8.5")
        link( rel="stylesheet" type="text/css" href="/assets/css/style.css")
        script(src="https://www.ft.com/__origami/service/build/v2/bundles/js?modules=o-grid@^4.3.8,o-fonts@^3.0.4,o-header@^7.2.9,o-buttons@^5.8.5" async)
    body
        header.o-header.o-header--simple(data-o-component='o-header', data-o-header--no-js='')
            .o-header__row.o-header__top
                .o-header__container
                    .o-header__top-wrapper
                        .o-header__top-column.o-header__top-column--left
                            a.o-header__top-link.o-header__top-link--search(href='#o-header-search', aria-controls='o-header-search', title='Open search bar')
                                span.o-header__top-link-label Search
                        .o-header__top-column.o-header__top-column--center
                            a.o-header__top-logo(href='/', title='Go to Financial Times homepage')
                                span.o-header__visually-hidden Financial Times
            #o-header-search.o-header__row.o-header__search.o--if-js(role='search', data-o-header-search='')
                .o-header__container
                    .o-header__top-wrapper
                        .o-header__top-column.o-header__top-column--left
                        form.o-header__search-form(action='/search', role='search', aria-label='Site search')
                            label.o-header__visually-hidden(for='o-header-search-term-js')
                                | Search the 
                                abbr(title='Financial Times') FT
                            input#o-header-search-term-js.o-header__search-term(name='q', type='text', placeholder='Search the FT')
                            button.o-header__search-submit(type='submit')
                                | Search
                            button.o-header__search-close(type='button', aria-controls='o-header-search', title='Close search bar')
                                span.o-header__visually-hidden Close
script(src='//www.ft.com/__origami/service/build/v2/bundles/js?modules=o-header%407.2.9%3A%2Fdemos%2Fsrc%2Fmain.js%2Co-colors%2Co-normalise')
